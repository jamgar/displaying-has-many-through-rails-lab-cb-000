<h1>Doctor: <%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>

<ul>
  <% @doctor.appointments.each do |appointment| %>
  <li>
    Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
    Appointments Time: <%= "#{appointment.appointment_datetime.strftime("%B %d, %Y")} at #{appointment.appointment_datetime.strftime("%H:%M")}" %>
  </li>
  <% end %>
</ul>
